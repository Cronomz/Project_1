<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:paddingHorizontal="5dp">

    <Button
        android:id="@+id/button_project"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:paddingBottom="15dp"
        android:text="Button"
        android:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationZ="-90dp"/>

    <ProgressBar
        android:id="@+id/project_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/design_default_color_primary"
        android:paddingHorizontal="10dp"
        android:progress="1"
        android:progressTint="#FF6600"
        android:visibility="visible"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_project"
        app:layout_constraintStart_toStartOf="@+id/button_project"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/project_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="0%"
        android:textColor="@color/white"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_project"
        app:layout_constraintStart_toEndOf="@+id/project_progress_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>